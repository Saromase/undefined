
<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">

        <title>{% block title %}{% endblock %}</title>

        {% block stylesheet %}{% endblock %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">

        <!-- REQUIRED CSS STYLESHEETS -->
        {% stylesheets 'assets/gulp/css/master.css'
            'assets/bower/bootstrap-datepicker/dist/css/bootstrap-datepicker3.css' 'assets/bower/select2/dist/css/select2.css'
            'assets/bower/smalot-bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css'
            'assets/bower/Ionicons/css/ionicons.css' 'assets/css/default/style.css' 'assets/css/default/helper.css'
            output='compiled/css/main.css' filter='cssrewrite' %}
                <link href="{{ asset_url }}" rel="stylesheet">
        {% endstylesheets %}

        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

        <!-- Google Font -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    </head>
    <body>
        {% block body %}{% endblock %}

        <!-- Error -->
        {% if success is defined %}
            <div class="alert alert-danger">
                <p></p>
            </div>
        {% endif %}

        <!-- Success -->
        {% if success is defined %}
            <div class="alert alert-success">
                <p></p>
            </div>
        {% endif %}

        <div id="storage" class="container main">
            <div class="alert" id="alert" style="display: none;"></div>
            <h1>Bienvenue dans votre <span class="storage-name">{{ storage.name }}</span></h1>

            <div class="row">
                <h2 class="text-center storage-name"></h2>
                <h3 class="text-center"> Taille du stockage : <span id="storageSize">{{ storage.length }}</span></h3>

                <!-- Button upgrade storage -->
                <button class="btn btn-info" type="button" data-toggle="modal" data-target="#storageUpgrade">
                    Plus d'espace ?
                </button>

                <!-- Modal -->
                <div class="modal fade" id="storageUpgrade" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></button>
                                <h4 class="modal-title">Voulez-vous agrandir votre <span class="storage-name"></span> ?</h4>
                            </div>
                            <div class="modal-body">
                                <p>Votre argent : <span id="playerMoney"></span></p>
                                <p>Prix : <span id="upgradePrice"></span></p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                <button type="button" class="btn btn-primary" data-dismiss="modal" id="acceptStorageUpgrade">Accepter</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- List items -->
                <div class="items">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Nombre</th>
                        </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </body>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" charset="utf-8"></script>

    <!-- REQUIRED JS SCRIPTS -->
    {% javascripts 'assets/bower/jquery/dist/jquery.js' 'assets/bower/bootstrap/dist/js/bootstrap.js'
        'assets/bower/bootstrap-datepicker/dist/js/bootstrap-datepicker.js' 'assets/bower/bootstrap-datepicker/dist/locales/bootstrap-datepicker.fr.min.js'
        'assets/bower/smalot-bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js' 'assets/bower/smalot-bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.fr.js'
        'assets/js/default/script.js' 'assets/bower/select2/dist/js/select2.js' 'assets/bower/select2/dist/js/i18n/fr.js'
        'assets/bower/bootbox.js/bootbox.js'
            output='compiled/js/main.js'%}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% block javascript %}{% endblock %}
</html>
